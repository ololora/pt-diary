<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PersonalTrainerDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/space_cadet</item>
        <item name="colorOnPrimary">@color/space_cadet</item>
        <item name="colorAccent">@color/imperial_red</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="android:statusBarColor">@color/space_cadet</item>
        <item name="android:colorBackground">@color/alice_blue</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="textInputStyle">@style/EditTextStyle</item>
        <item name="android:colorControlActivated">@color/space_cadet</item>
        <item name="tabStyle">@style/Widget.Design.TabLayout</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="enforceMaterialTheme">true</item>
        <item name="itemBackground">@null</item>
        <item name="android:background">@color/space_cadet</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="rippleColor">@color/mtrl_navigation_bar_ripple_color</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/amaranth_red</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/manatee</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/manatee</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:background">@color/white</item>
    </style>
</resources>
